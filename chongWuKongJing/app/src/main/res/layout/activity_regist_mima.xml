<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="请先获取并输入验证码" />

    <EditText
        android:id="@+id/phone"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="手机号"
        android:maxLength="11"
        android:inputType="number"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/yanzhegnma"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/huoquyanzhengm"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:background="#ADD8E6"
            android:gravity="center"
            android:text="获取验证码"
            app:qmui_borderColor="@color/qmui_s_link_color" />

    </LinearLayout>

    <com.xwray.passwordview.PasswordView
        android:id="@+id/et_register_password4"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="请输入密码"
        android:maxLength="20"
        android:inputType="textPassword"
        android:maxLines="1" />

    <com.xwray.passwordview.PasswordView
        android:id="@+id/et_register_password5"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="请再输入密码"
        android:maxLength="20"
        android:inputType="textPassword"
        android:maxLines="1" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ADD8E6"
        android:gravity="center"
        android:textSize="18dp"
        android:text="继续" />

</LinearLayout>