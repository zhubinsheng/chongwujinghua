<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/touxiang"

        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="pita" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="#f6f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:orientation="vertical">





        <com.qmuiteam.qmui.widget.grouplist.QMUICommonListItemView
            android:id="@+id/group_list_item_gegngaishebeimignc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qmui_list_item_height"
            android:layout_weight="1"
            app:qmui_accessory_type="chevron"
            app:qmui_commonList_detailColor="@color/qmui_config_color_red"
            app:qmui_commonList_titleColor="@color/qmui_s_link_color"
            app:qmui_orientation="vertical" />

        <com.qmuiteam.qmui.widget.grouplist.QMUICommonListItemView
            android:id="@+id/group_list_item_shouhoufuwu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qmui_list_item_height"
            android:layout_weight="1"
            app:qmui_accessory_type="chevron"
            app:qmui_commonList_detailColor="@color/qmui_config_color_red"
            app:qmui_commonList_titleColor="@color/qmui_s_link_color"
            app:qmui_orientation="vertical" />


        <com.qmuiteam.qmui.widget.grouplist.QMUICommonListItemView
            android:id="@+id/group_list_item_genggaimima"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qmui_list_item_height"
            android:layout_weight="1"
            app:qmui_accessory_type="chevron"
            app:qmui_commonList_detailColor="@color/qmui_config_color_red"
            app:qmui_commonList_titleColor="@color/qmui_s_link_color"
            app:qmui_orientation="vertical" />

        <com.qmuiteam.qmui.widget.grouplist.QMUICommonListItemView
            android:id="@+id/group_list_item_changjianwenti"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qmui_list_item_height"
            android:layout_weight="1"
            app:qmui_accessory_type="chevron"
            app:qmui_commonList_detailColor="@color/qmui_config_color_red"
            app:qmui_commonList_titleColor="@color/qmui_s_link_color"
            app:qmui_orientation="vertical" />


        <com.qmuiteam.qmui.widget.grouplist.QMUICommonListItemView
            android:id="@+id/group_list_item_richangweihushouce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qmui_list_item_height"
            android:layout_weight="1"
            app:qmui_accessory_type="chevron"
            app:qmui_commonList_detailColor="@color/qmui_config_color_red"
            app:qmui_commonList_titleColor="@color/qmui_s_link_color"
            app:qmui_orientation="vertical" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#0088c7"
            android:gravity="center"
            android:textSize="18dp"
            android:text="设备列表" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#90e1f4"
            android:gravity="center"
            android:textSize="18dp"
            android:text="退出登录" />
    </LinearLayout>
</LinearLayout>